<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bsi.presensidosen.About">

    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_toolbar" />

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="vertical">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/hijau"
            android:orientation="vertical"
            android:layout_below="@+id/custom_toolbar"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="481dp"
                android:layout_weight="0.66">


                <TextView
                    android:id="@+id/tentang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:text="APLIKASI PRESENSI DOSEN"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/aplikasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="110dp"
                    android:text="UNIVERSITAS MUHAMMADIYAH YOGYAKARTA"
                    android:textAlignment="center"
                    android:textColor="@color/kuning"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/umy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="160dp"
                    android:text="Version 2.0.1"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/view_dosen"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo"
                    app:civ_border_color="@color/gray"
                    app:civ_border_width="0dp"
                    android:layout_marginTop="50dp"
                    android:layout_alignTop="@+id/umy"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/bantuanA"
                    android:layout_width="fill_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:gravity="center"
                    android:text="@string/privacy_policy"
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:layout_alignTop="@+id/view_dosen"
                    android:textSize="13sp"/>


            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

<!--</LinearLayout>-->
